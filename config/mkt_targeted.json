    "mkt_targeted/groupTab/default": {
        "layout": {
            "sections": {
                "": {
                    "properties": { 
                        "template_id": {}
                    }
                },
                "message": {
                    "properties": {
                        "email_subject": {},
                        "email_body": {},
                        "cc": {},
                        "cci": {},
                        "sms": {}
                    }
                }
            },
            "posts": {
                "send": {
                    "controller": "core",
                    "action": "v1",
                    "steps": { 
                        "registerSmtp": {},
                        "sendSmtp": { "async": true }
                    },
                    "entity": "mkt_targeted",
                    "labels": { "default": "Send", "fr_FR": "Envoyer" },
                    "properties": {
                        "template_id": {},
                        "email_subject": {},
                        "email_body": {},
                        "cc": {},
                        "cci": {},
                        "sms": {}
                    }
                },
                "save": {
                    "controller": "core",
                    "action": "v1",
                    "steps": { "save": {} },
                    "entity": "mkt_automation_template",
                    "labels": { "default": "Save as template", "fr_FR": "Conserver comme modèle" },
                    "properties": {
                        "email_subject": {},
                        "email_body": {},
                        "cc": {},
                        "cci": {},
                        "sms": {}
                    }
                }
            }
        },
        "properties": {
            "template_id": {
                "value": "?template_id",
                "columns": {
                    "name": "template_name", 
                    "email_subject": "template_email_subject", 
                    "email_body": "template_email_body", 
                    "cc": "template_cc", 
                    "cci": "template_cci", 
                    "sms": "template_sms"
                },
                "change": "get"
            },
            "email_subject": { "value": "template_email_subject" },
            "email_body": { "value": "template_email_body",  "class": "col-md-12" },
            "cc": { "value": "template_cc" },
            "cci": { "value": "template_cci" },
            "sms": { "value": "template_sms",  "class": "col-md-12" }
        }
    },

